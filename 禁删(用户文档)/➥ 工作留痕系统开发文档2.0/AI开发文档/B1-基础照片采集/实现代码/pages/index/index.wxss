.container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 20px;
  box-sizing: border-box;
  position: relative;
}

/* 页面头部 */
.header {
  padding: 20px 0;
  background-color: #ffffff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  text-align: center;
  margin-bottom: 30px;
}

.title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 14px;
  color: #666;
  margin-top: 10px;
}

/* 加载中显示 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50px 0;
  color: #666;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(0, 0, 0, 0.1);
  border-radius: 50%;
  border-top-color: #1989fa;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-container text {
  margin-top: 15px;
}

/* 选择区域 */
.selection-area {
  flex: 1;
  padding: 15px;
  overflow-y: auto;
  margin-bottom: 30px;
}

.section {
  background-color: #fff;
  border-radius: 10px;
  margin-bottom: 20px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #07c160;
}

.add-icon {
  margin-right: 5px;
  font-size: 16px;
  font-weight: bold;
}

.section-content {
  padding: 15px;
}

/* 项目列表 */
.project-list {
  display: flex;
  white-space: nowrap;
  padding-bottom: 10px;
}

.project-item {
  display: inline-block;
  width: 140px;
  padding: 15px;
  margin-right: 10px;
  background-color: #f9f9f9;
  border-radius: 8px;
  border: 1px solid #eee;
  transition: all 0.3s;
}

.project-item.selected {
  background-color: #e6f7ee;
  border-color: #07c160;
}

.project-name {
  font-size: 15px;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.project-info {
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.empty-project {
  padding: 30px 0;
  text-align: center;
  color: #999;
}

/* 位置列表 */
.location-list {
  max-height: 300px;
}

.location-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
  transition: all 0.3s;
}

.location-item:last-child {
  border-bottom: none;
}

.location-item.selected {
  background-color: #e6f7ee;
}

.location-name {
  font-size: 15px;
  color: #333;
}

.check-icon {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: #07c160;
  position: relative;
}

.check-icon::after {
  content: "";
  position: absolute;
  width: 6px;
  height: 10px;
  border: 2px solid #fff;
  border-left: 0;
  border-top: 0;
  top: 4px;
  left: 7px;
  transform: rotate(45deg);
}

.empty-location {
  padding: 30px 0;
  text-align: center;
  color: #999;
}

/* 操作按钮区域 */
.action-area {
  padding: 15px 20px 30px;
  background-color: #fff;
  border-top: 1px solid #eee;
}

.action-button {
  margin-bottom: 10px;
  border-radius: 8px;
  font-size: 16px;
}

.capture-button {
  background-color: #1989fa;
  color: #fff;
}

.capture-button[disabled] {
  background-color: #e0e0e0;
  color: #bdbdbd;
}

.view-button {
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
}

.view-button[disabled] {
  color: #bdbdbd;
  border-color: #e0e0e0;
}

/* 对话框 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 900;
}

.dialog {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 300px;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  z-index: 999;
}

.dialog-header {
  padding: 15px;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.dialog-title {
  font-size: 18px;
  font-weight: bold;
}

.dialog-content {
  padding: 20px 15px;
}

.dialog-input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  box-sizing: border-box;
  font-size: 14px;
}

.error-message {
  font-size: 12px;
  color: #ff4d4f;
  margin-top: 5px;
}

.dialog-footer {
  display: flex;
  border-top: 1px solid #eee;
}

.dialog-btn {
  flex: 1;
  height: 45px;
  line-height: 45px;
  text-align: center;
  font-size: 16px;
  border-radius: 0;
  background-color: #fff;
}

.dialog-btn::after {
  border: none;
}

.cancel-btn {
  color: #666;
  border-right: 1px solid #eee;
}

.confirm-btn {
  color: #1989fa;
}

/* 页脚 */
.footer {
  padding: 15px;
  text-align: center;
  font-size: 12px;
  color: #999;
  background-color: #fff;
  border-top: 1px solid #eee;
} 