/* 照片采集页面样式 */

/* 容器样式 */
.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background-color: #000;
}

/* 相机区域 */
.camera-section {
  width: 100%;
  height: 100%;
  position: relative;
  transition: all 0.3s ease;
}

/* 预览区域 */
.preview-section {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  z-index: 30;
  transition: all 0.3s ease;
}

/* 预览头部 */
.preview-header {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), transparent);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  z-index: 10;
}

.header-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  color: #fff;
  font-size: 50rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 预览轮播图 */
.preview-swiper {
  width: 100%;
  height: 100%;
}

.preview-image {
  width: 100%;
  height: 100%;
}

/* 预览控制区 */
.preview-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 30rpx;
  transition: opacity 0.3s;
  z-index: 10;
}

.preview-action {
  width: 180rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 35rpx;
  font-size: 28rpx;
  color: #fff;
}

.preview-action.delete {
  background-color: #ff5252;
}

.preview-action.save {
  background-color: #4caf50;
}

.preview-action.use {
  background-color: #2196f3;
}

/* 底部操作栏 */
.bottom-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  z-index: 20;
}

/* 操作按钮 */
.action-btn {
  height: 70rpx;
  padding: 0 30rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 30rpx;
}

.preview-btn {
  background-color: rgba(255, 255, 255, 0.3);
  position: relative;
}

.count {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  background-color: #ff5252;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.done-btn {
  background-color: #2196f3;
}

/* 加载覆盖层 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
}

/* 辅助样式 */
.hidden {
  opacity: 0;
  pointer-events: none;
}

/* 适配iPhone X及以上的安全区域 */
@media screen and (min-width: 375px) {
  .bottom-bar,
  .preview-controls {
    padding-bottom: calc(env(safe-area-inset-bottom) / 3);
    height: calc(110rpx + env(safe-area-inset-bottom) / 3);
  }
} 