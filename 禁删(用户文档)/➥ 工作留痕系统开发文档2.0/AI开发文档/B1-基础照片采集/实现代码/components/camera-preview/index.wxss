.camera-container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #000;
  overflow: hidden;
}

.camera {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  pointer-events: none;
}

/* 对焦区域样式 */
.focus-area {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 70px;
  height: 70px;
  transform: translate(-50%, -50%);
  border: 2px solid rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s;
}

.focus-area.active {
  opacity: 1;
  animation: focus-animation 0.5s ease-out;
}

@keyframes focus-animation {
  0% {
    width: 100px;
    height: 100px;
    opacity: 0.8;
  }
  100% {
    width: 70px;
    height: 70px;
    opacity: 0;
  }
}

/* 网格线样式 */
.grid-lines {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  opacity: 0.3;
}

.grid-lines::before,
.grid-lines::after {
  content: "";
  display: block;
  position: absolute;
  background-color: rgba(255, 255, 255, 0.5);
}

.grid-lines::before {
  width: 1px;
  height: 100%;
  left: 33.33%;
  top: 0;
  box-shadow: 1px 0 0 rgba(0, 0, 0, 0.3), 100% 0 0 rgba(255, 255, 255, 0.5), calc(100% + 1px) 0 0 rgba(0, 0, 0, 0.3);
}

.grid-lines::after {
  height: 1px;
  width: 100%;
  top: 33.33%;
  left: 0;
  box-shadow: 0 1px 0 rgba(0, 0, 0, 0.3), 0 100% 0 rgba(255, 255, 255, 0.5), 0 calc(100% + 1px) 0 rgba(0, 0, 0, 0.3);
}

/* 相机错误样式 */
.camera-error {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #333;
  color: #fff;
  padding: 20px;
  box-sizing: border-box;
  text-align: center;
}

.error-text {
  font-size: 18px;
  margin: 16px 0;
  font-weight: bold;
}

.error-help {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 20px;
  font-size: 14px;
  color: #ccc;
  max-width: 80%;
}

.retry-button {
  margin-top: 20px;
  min-width: 120px;
}

/* 加载动画 */
.camera-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 拍照闪光效果 */
.camera-shutter-effect {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  opacity: 0;
  pointer-events: none;
  animation: shutter-effect 0.2s ease-out;
}

@keyframes shutter-effect {
  0% { opacity: 0; }
  50% { opacity: 0.7; }
  100% { opacity: 0; }
} 