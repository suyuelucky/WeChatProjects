/* 相机组件样式 */

/* 容器样式 */
.camera-container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #000;
  overflow: hidden;
}

/* 相机视图 */
.camera-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 模式指示器 */
.mode-indicator {
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 10;
}

.mode-text {
  padding: 8rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

/* 定时器覆盖层 */
.timer-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 15;
}

.timer-count {
  font-size: 200rpx;
  color: #fff;
  text-shadow: 0 0 20rpx rgba(0, 0, 0, 0.8);
  font-weight: bold;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.8; }
  100% { transform: scale(1); opacity: 1; }
}

/* 连拍计数器 */
.continuous-counter {
  position: absolute;
  top: 80rpx;
  right: 30rpx;
  padding: 10rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 10rpx;
  z-index: 10;
}

.counter-text {
  color: #fff;
  font-size: 28rpx;
}

/* 控制区域 */
.controls-container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  z-index: 20;
}

/* 顶部控制栏 */
.top-controls {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

/* 底部控制栏 */
.bottom-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
}

/* 控制按钮 */
.control-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  margin: 0 10rpx;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-text {
  color: #fff;
  font-size: 24rpx;
}

/* 闪光灯图标状态 */
.flash-icon.auto { color: #ffcc00; }
.flash-icon.on { color: #ff9900; }
.flash-icon.off { color: #ffffff; }

/* 模式选择器 */
.mode-selector {
  display: flex;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 40rpx;
  overflow: hidden;
}

.mode-option {
  padding: 15rpx 30rpx;
  color: #ccc;
  font-size: 28rpx;
  transition: all 0.3s;
}

.mode-option.active {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-weight: bold;
}

/* 拍照按钮 */
.capture-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 6rpx solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  transition: all 0.2s;
}

.capture-btn .inner-circle {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #fff;
}

.capture-btn.disabled {
  opacity: 0.5;
}

.btn-hover {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 照片计数 */
.photo-count {
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.photo-count text {
  color: #fff;
  font-size: 28rpx;
}

/* 权限视图 */
.permission-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #333;
  color: #fff;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.loading-text {
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.error-text {
  font-size: 40rpx;
  color: #ff5252;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 30rpx;
  color: #ddd;
  text-align: center;
  margin-bottom: 50rpx;
}

.permission-btn {
  background-color: #007aff;
  color: #fff;
  width: 80%;
  margin-bottom: 20rpx;
}

.alternative-btn {
  background-color: #555;
  color: #fff;
  width: 80%;
}

/* 适配iPhone X以上的安全区域 */
@media screen and (min-width: 375px) {
  .bottom-controls {
    padding-bottom: calc(30rpx + constant(safe-area-inset-bottom));
    padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  }
} 