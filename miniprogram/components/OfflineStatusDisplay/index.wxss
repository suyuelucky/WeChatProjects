/* components/OfflineStatusDisplay/index.wxss */
.offline-status {
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  margin: 10rpx 0;
  transition: all 0.3s ease;
}

.offline-status.online {
  background-color: rgba(232, 245, 233, 0.8);
  border: 1rpx solid #c8e6c9;
}

.offline-status.offline {
  background-color: rgba(255, 235, 238, 0.8);
  border: 1rpx solid #ffcdd2;
}

.offline-status.weak-network {
  background-color: rgba(255, 243, 224, 0.8);
  border: 1rpx solid #ffe0b2;
}

.status-icon {
  display: flex;
  align-items: center;
  margin-right: 10rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.dot.green {
  background-color: #4caf50;
}

.dot.red {
  background-color: #f44336;
}

.status-text {
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.sync-info {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.last-sync {
  margin-top: 6rpx;
}

.actions {
  margin-top: 16rpx;
}

.sync-button {
  color: #2196f3;
  font-size: 24rpx;
  padding: 4rpx 20rpx;
  background-color: rgba(33, 150, 243, 0.1);
  border: 1rpx solid #2196f3;
} 