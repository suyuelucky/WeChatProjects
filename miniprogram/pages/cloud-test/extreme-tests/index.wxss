/* 极端测试套件样式 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.test-card {
  transition: all 0.3s ease;
}

.test-card.active {
  border-left: 8rpx solid #1aad19;
}

/* 测试状态区域 */
.stats-card {
  transition: all 0.3s ease;
}

.stats-card.running {
  border-left: 8rpx solid #1aad19;
  background-color: #f0f9eb;
}

.stats-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.stat-item {
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-value.success {
  color: #1aad19;
}

.stat-value.failed {
  color: #e64340;
}

.status-item {
  width: 100%;
  margin-top: 10rpx;
}

.running-status {
  color: #1aad19;
  font-weight: bold;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}

/* 按钮组 */
.btn-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
}

.function-btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  background-color: #1aad19;
  color: #fff;
  border: none;
  min-width: 180rpx;
  padding: 0 20rpx;
}

.function-btn[disabled] {
  background-color: #9ed29e;
  color: rgba(255, 255, 255, 0.6);
}

.clear-btn {
  background-color: #ff9800;
}

.reset-btn {
  background-color: #999;
}

.details-btn {
  background-color: #007bff;
}

/* 配置项样式 */
.config-section {
  margin-bottom: 20rpx;
}

.config-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.config-label {
  font-size: 28rpx;
  color: #666;
  width: 250rpx;
  margin-right: 20rpx;
}

/* 测试结果区域 */
.result-summary {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.result-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.result-label {
  font-size: 26rpx;
  color: #666;
  width: 180rpx;
}

.result-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.result-value.success {
  color: #1aad19;
}

.result-value.failed {
  color: #e64340;
}

/* 提示区域 */
.tips-card {
  background-color: #f0f9eb;
  border-left: 8rpx solid #1aad19;
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.5;
} 