/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.motto-container {
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.motto {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.action-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.diary-btn, .camera-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  transition: all 0.3s;
}

.diary-btn {
  background-color: #000;
  color: #fff;
}

.camera-btn {
  background-color: #fff;
  color: #000;
  border: 2rpx solid #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera-icon {
  margin-right: 8rpx;
  font-size: 36rpx;
}

.diary-btn:active, .camera-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.footer {
  margin-top: 120rpx;
  font-size: 24rpx;
  color: #999;
}

/* 错误测试链接样式 */
.error-test-link {
  margin-top: 40rpx;
  width: 100%;
}

.error-test-link button {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  background-color: #4a6bff;
} 