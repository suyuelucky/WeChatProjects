/**app-page.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.motto-container {
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.motto {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  letter-spacing: 2rpx;
}

.action-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.diary-btn, .camera-btn, .discover-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  transition: all 0.3s;
  display: flex;
  justify-content: center;
  align-items: center;
}

.discover-btn {
  background-color: #4361ee;
  color: #fff;
}

.diary-btn {
  background-color: #000;
  color: #fff;
}

.camera-btn {
  background-color: #fff;
  color: #000;
  border: 2rpx solid #000;
}

.camera-icon, .diary-icon, .discover-icon {
  margin-right: 8rpx;
  font-size: 36rpx;
}

.diary-btn:active, .camera-btn:active, .discover-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.footer {
  margin-top: 120rpx;
  font-size: 24rpx;
  color: #999;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

.scrollarea {
  flex: 1;
  width: 100%;
} 