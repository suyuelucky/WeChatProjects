/* 日记编辑页面样式 */
.editor-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
}

.editor-header {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.date-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.date-picker {
  display: flex;
  align-items: center;
}

.date-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.weather-section {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.weather-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.weather-text {
  font-size: 28rpx;
  color: #333;
}

.title-section {
  margin-top: 20rpx;
}

.title-input {
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  padding: 10rpx 0;
}

.editor-body {
  flex: 1;
  padding: 20rpx 0;
  overflow-y: auto;
}

.content-textarea {
  width: 100%;
  min-height: 300rpx;
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
}

.media-section {
  margin: 20rpx 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 28rpx;
}

.editor-footer {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.tool-bar {
  display: flex;
  margin-bottom: 20rpx;
}

.tool-item {
  margin-right: 40rpx;
  font-size: 40rpx;
  color: #666;
}

.action-bar {
  display: flex;
  justify-content: flex-end;
}

.cancel-btn, .save-btn {
  margin-left: 20rpx;
  font-size: 30rpx;
  padding: 12rpx 30rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
}

.save-btn {
  background-color: #0080ff;
  color: #fff;
} 