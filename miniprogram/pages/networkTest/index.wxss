/* pages/networkTest/index.wxss */
.container {
  padding: 30rpx;
}

.page-header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.network-status {
  margin-bottom: 40rpx;
}

.status-card {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.status-label {
  color: #666;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: 500;
}

.status-value.connected {
  color: #4caf50;
}

.status-value.disconnected {
  color: #f44336;
}

.test-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.test-button {
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
}

.test-button.offline {
  background-color: #e3f2fd;
  color: #1976d2;
}

.test-button.weak {
  background-color: #fff3e0;
  color: #ff9800;
}

.test-button.full {
  background-color: #f1f8e9;
  color: #689f38;
}

.test-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.progress-text {
  color: #666;
  font-size: 28rpx;
}

.test-results {
  margin-top: 40rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  overflow: hidden;
}

.result-header {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.result-type {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
  display: block;
}

.result-status {
  padding: 20rpx;
  text-align: center;
}

.result-status.success {
  background-color: rgba(76, 175, 80, 0.1);
}

.result-status.fail {
  background-color: rgba(244, 67, 54, 0.1);
}

.status-text {
  font-size: 32rpx;
  font-weight: bold;
}

.result-status.success .status-text {
  color: #4caf50;
}

.result-status.fail .status-text {
  color: #f44336;
}

.result-details {
  padding: 20rpx;
  border-top: 1rpx solid #ddd;
}

.detail-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 16rpx;
}

.detail-label {
  color: #666;
  font-size: 26rpx;
  width: 180rpx;
}

.detail-value {
  font-size: 26rpx;
  flex: 1;
}

.detail-value.success {
  color: #4caf50;
}

.detail-value.fail {
  color: #f44336;
}

.detail-value.error {
  color: #f44336;
  font-size: 24rpx;
}

.error-message {
  padding: 20rpx;
  background-color: rgba(244, 67, 54, 0.05);
  border-top: 1rpx solid #ddd;
}

.error-text {
  color: #f44336;
  font-size: 24rpx;
}

.component-demo {
  margin-top: 60rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/**
 * 网络测试页面样式
 */

.network-test-container {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 通用标题样式 */
.section-header {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eaeaea;
  padding-bottom: 20rpx;
}

.section-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 通用卡片样式 */
.status-card,
.diagnostic-card,
.test-card,
.timeout-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 30rpx;
}

/* 网络状态区域 */
.status-title,
.diagnostic-title,
.test-title,
.timeout-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.status-info {
  display: flex;
  flex-direction: column;
  line-height: 2;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.status-connected {
  background-color: #f0f9eb;
  color: #67c23a;
}

.status-disconnected {
  background-color: #fee;
  color: #f56c6c;
}

/* 诊断结果区域 */
.diagnostic-overall {
  font-size: 30rpx;
  font-weight: bold;
  padding: 16rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.diagnostic-details {
  padding: 0 16rpx;
}

.details-title {
  font-weight: bold;
  display: block;
  margin: 16rpx 0;
}

.detail-item,
.suggestion-item {
  line-height: 1.8;
  margin-bottom: 12rpx;
  padding-left: 10rpx;
}

.suggestion-item {
  color: #409eff;
}

/* 网络测试区域 */
.average-latency {
  font-size: 30rpx;
  font-weight: bold;
  padding: 16rpx;
  background-color: #f5f7fa;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.test-items {
  margin-bottom: 20rpx;
}

.test-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.test-item.success .test-value {
  color: #67c23a;
}

.test-item.fail .test-value {
  color: #f56c6c;
}

.test-url {
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.test-in-progress {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.loading {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  margin-right: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 超时记录区域 */
.timeout-stats {
  padding: 16rpx;
}

.timeout-total {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.timeout-breakdown {
  margin-top: 16rpx;
  margin-bottom: 20rpx;
}

.breakdown-title {
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.breakdown-item {
  line-height: 1.8;
  padding-left: 10rpx;
}

/* 按钮区域 */
.action-buttons {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.action-buttons button {
  margin-left: 16rpx;
}

/* 底部提示 */
.footer-tips {
  text-align: center;
  color: #909399;
  font-size: 24rpx;
  margin: 40rpx 0 20rpx;
} 