.test-container {
  padding: 24rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.test-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #ddd;
}

.test-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.test-time {
  font-size: 28rpx;
  color: #666;
}

.test-results {
  margin-bottom: 32rpx;
}

.test-group {
  margin-bottom: 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.group-title {
  padding: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  background-color: #f9f9f9;
  border-bottom: 1rpx solid #eee;
}

.test-items {
  padding: 8rpx 16rpx;
}

.test-item {
  padding: 16rpx;
  margin: 8rpx 0;
  border-radius: 6rpx;
  background-color: #f9f9f9;
}

.test-item.success {
  border-left: 8rpx solid #07c160;
}

.test-item.fail {
  border-left: 8rpx solid #fa5151;
}

.test-item-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.test-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.test-status {
  font-size: 26rpx;
}

.success .test-status {
  color: #07c160;
}

.fail .test-status {
  color: #fa5151;
}

.test-message {
  font-size: 26rpx;
  color: #666;
}

.test-actions {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding: 8rpx 0 16rpx;
  border-bottom: 1rpx solid #eee;
}

.action-buttons {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 0;
}

.test-btn {
  margin: 8rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
} 