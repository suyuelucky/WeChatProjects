/* 容器 */
.publish-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
}

/* 顶部导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  height: 88rpx;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.navbar-left {
  font-size: 30rpx;
  color: #333;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.navbar-right {
  font-size: 30rpx;
  color: #999;
}

.navbar-right.active {
  color: #07c160;
  font-weight: 500;
}

/* 编辑区 */
.editor-container {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

/* 文本输入区 */
.text-area-container {
  position: relative;
  margin-bottom: 24rpx;
}

.content-textarea {
  width: 100%;
  min-height: 240rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  padding: 0;
}

.placeholder {
  color: #999;
  font-size: 30rpx;
}

.word-count {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
  color: #999;
}

/* 图片选择区 */
.image-selector {
  margin-top: 32rpx;
}

.image-preview-list {
  display: flex;
  flex-wrap: wrap;
}

.image-preview-item {
  position: relative;
  width: 216rpx;
  height: 216rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-preview-item:nth-child(3n) {
  margin-right: 0;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 0 8rpx;
}

.add-image-btn {
  width: 216rpx;
  height: 216rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.icon-add {
  font-size: 64rpx;
  color: #999;
}

/* 底部工具栏 */
.toolbar {
  display: flex;
  padding: 16rpx 24rpx;
  border-top: 1rpx solid #eee;
  background-color: #fff;
}

.tool-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
}

.iconfont {
  font-size: 36rpx;
  color: #666;
  margin-right: 8rpx;
}

.icon-location:before {
  content: "\e790";
}

.icon-public:before {
  content: "\e7df";
}

.icon-private:before {
  content: "\e7b5";
}

.tool-text {
  font-size: 28rpx;
  color: #666;
}

/* 按钮样式 */
.btn {
  margin-top: 32rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
} 