/**
 * 博客详情页样式
 * 创建时间：2025年04月10日 21:10:59
 * 创建者：Claude助手
 */

/* 容器样式 */
.detail-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 100rpx; /* 为底部评论框留出空间 */
}

/* 博客内容区域 */
.blog-content {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

/* 作者信息 */
.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.author-detail {
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 文本内容 */
.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
}

/* 图片列表 */
.image-list {
  margin-bottom: 24rpx;
}

.content-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

/* 位置信息 */
.location {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  color: #666;
  font-size: 26rpx;
}

.icon-location {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 互动栏 */
.interaction-bar {
  display: flex;
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
  background-color: transparent;
  padding: 0;
  line-height: normal;
}

.action-btn::after {
  display: none;
}

.iconfont {
  font-size: 36rpx;
  color: #666;
  margin-right: 6rpx;
}

.icon-like-filled {
  color: #f56c6c;
}

.count {
  font-size: 26rpx;
  color: #666;
}

.share-btn {
  margin: 0;
  padding: 0;
  color: #666;
}

/* 评论区 */
.comment-section {
  background-color: #fff;
  padding: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

/* 评论列表 */
.comment-list {
  margin-bottom: 16rpx;
}

.comment-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.commenter-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.comment-right {
  flex: 1;
}

.commenter-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.comment-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

/* 空评论状态 */
.empty-comment {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部评论输入框 */
.comment-input-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
  z-index: 100;
}

.comment-input {
  flex: 1;
  height: 68rpx;
  background-color: #f5f5f5;
  border-radius: 34rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 100rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.send-btn.active {
  color: #07c160;
  font-weight: 500;
}

/* 添加以下样式 */
.image-error-tip {
  background-color: #fff5f5;
  border: 1px solid #ffccc7;
  border-radius: 8rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.image-error-tip text {
  color: #ff4d4f;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.retry-btn {
  background-color: #ff4d4f;
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;
} 