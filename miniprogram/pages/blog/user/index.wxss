/* 容器 */
.user-blog-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f6f6;
}

/* 用户信息头部 */
.user-header {
  display: flex;
  padding: 32rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid #f5f5f5;
  margin-right: 24rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #999;
  line-height: 1.4;
}

/* 博客列表容器 */
.blog-list-container {
  flex: 1;
  background-color: #fff;
}

/* 标签页 */
.blog-tab {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.tab-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 博客列表 */
.blog-list {
  padding: 0 24rpx;
}

.blog-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.blog-content {
  display: flex;
  margin-bottom: 16rpx;
}

.blog-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-right: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.blog-images {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.blog-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
}

.image-count {
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  border-radius: 0 0 8rpx 0;
}

.blog-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.blog-time {
  font-size: 24rpx;
  color: #999;
}

.blog-stats {
  display: flex;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
}

.iconfont {
  font-size: 32rpx;
  color: #999;
  margin-right: 4rpx;
}

.count {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 0;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.publish-btn {
  background-color: #07c160;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
} 