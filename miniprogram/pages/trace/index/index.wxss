/* ÁïôÁóïËÆ∞ÂΩïÂàóË°® */
.trace-list {
  margin: 30rpx 0;
}

.loading, .error, .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid #eee;
  border-top-color: #576b95;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text, .error-text, .empty-text {
  font-size: 28rpx;
  color: #666;
}

.error-retry {
  margin-top: 20rpx;
  color: #576b95;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border: 1rpx solid #576b95;
  border-radius: 30rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #f5f5f5;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

