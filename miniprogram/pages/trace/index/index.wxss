.trace-types {
  margin: 20rpx 0;
}

.type-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.type-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  box-sizing: border-box;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #576b95;
  font-size: 40rpx;
}

