/* 页面容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 页面标题 */
.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 16rpx;
}

.status {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 10rpx 0;
}

.status.success {
  color: #07c160;
  font-weight: bold;
}

.status.fail {
  color: #fa5151;
  font-weight: bold;
}

/* 内存统计区域 */
.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
}

.details-toggle {
  font-size: 24rpx;
  color: #576b95;
  font-weight: normal;
}

.stats-row {
  display: flex;
  margin-bottom: 16rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stats-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 按钮区域 */
.buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.btn {
  flex: 0 0 30%;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 0;
  text-align: center;
}

/* 测试结果区域 */
.result-summary {
  margin-bottom: 24rpx;
}

.summary-item {
  display: flex;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-label {
  flex: 0 0 160rpx;
  font-size: 26rpx;
  color: #666;
}

.summary-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.summary-value.success {
  color: #07c160;
  font-weight: bold;
}

.summary-value.fail {
  color: #fa5151;
  font-weight: bold;
}

/* 测试步骤结果 */
.step-item {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.step-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.step-status-icon {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  font-weight: bold;
}

.step-status-icon.success {
  background-color: #07c160;
  color: white;
}

.step-status-icon.partial {
  background-color: #ffc300;
  color: white;
}

.step-status-icon.error {
  background-color: #fa5151;
  color: white;
}

.step-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.step-details {
  font-size: 24rpx;
  color: #666;
  padding-left: 56rpx;
  line-height: 1.6;
}

/* 错误列表 */
.error-list {
  margin-top: 20rpx;
  padding: 16rpx;
  background-color: #fff7f7;
  border-radius: 8rpx;
  border: 1rpx solid #ffebeb;
}

.error-title {
  font-size: 28rpx;
  color: #fa5151;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.error-item {
  font-size: 24rpx;
  color: #fa5151;
  margin-bottom: 8rpx;
  line-height: 1.6;
} 